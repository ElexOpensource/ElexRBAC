@attribute [Authorize(Policy = RbacConstants.AuthenticationSchema)]
<PageTitle>@PageTittle</PageTitle>

<RadzenColumn SizeMD=12>

    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@ErrorVisible">Cannot save role</RadzenAlert>

    <RadzenTemplateForm TItem="Role" Data="@Role" Submit="@FormSubmit">      
        
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Role Name" Component="rolename" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@Role.RoleName" Name="rolename" />
                <RadzenRequiredValidator Component="rolename" Text="RoleName is required" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
            <RadzenLabel Text="Role Type" Component="TypeMaster" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDownDataGrid Data=@TypeMaster TextProperty="Name" ValueProperty="Id" AllowClear=true
                                        Placeholder="Choose RoleType" style="display: block; width: 100%" @bind-Value=@Role.TypeMasterId Name="typemasterid"
                                        SelectedValue=@RoleTypeValue Count=@RoleTypeCount LoadData=@LoadRoleType />
            </RadzenColumn>
        </RadzenRow>

        @* <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Parent" Component="parent" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDownDataGrid Data="@Parents" TextProperty="RoleName" ValueProperty="Id" AllowClear=true
                        Placeholder="Choose parent" style="display: block; width: 100%" @bind-Value="@Role.ParentId" Name="parentid"
                                        SelectedValue=@ParentsValue Count=@ParentsCount LoadData=@LoadParents />
            </RadzenColumn>
        </RadzenRow> *@

        <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@Cancel"  />
        </RadzenStack>

    </RadzenTemplateForm>

</RadzenColumn>

